<include file="Public:head" />
<div class="amain">
	<div class="leftspace" style="margin-top: 30px;">
		<form id="form1" action="/input/deal" method="post"
			enctype="multipart/form-data">
			<table style="clear: both; width: 100%">
				<tbody>

					<tr>
						<td>收信人ID</td>
						<td><input size="40" name="touid" value="{$page.data.touid}"
							type="text" datatype="require" require="true" msg="收信人ID" /></td>
					</tr>
					<tr>
						<td>标题</td>
						<td><input size="40" name="title" value="{$page.data.title}"
							type="text" datatype="require" require="true" msg="标题" /></td>
					</tr>
					<tr>
						<td>消息内容</td>
						<td><textarea id="content" rows="4" cols="70" name="content">{$page.data.content}</textarea>
						</td>
					</tr>
					<tr>
						<td><input type="hidden" name="form" value="mail" id="form" /><input
							type="hidden" name="id" value="{$page.data.id}" id="id" />
						</td>
						<td><input type="submit" name="submit" value="提交"
							class="btn-submit"></td>
					</tr>
				</tbody>
			</table>
		</form>
		<script>
			$('#form1').checkForm();
		</script>
	</div>
</div>
<div class="aside">
	<include file="Component:actionlink" />
</div>
<div class="extra"></div>
<include file="Public:foot" />
