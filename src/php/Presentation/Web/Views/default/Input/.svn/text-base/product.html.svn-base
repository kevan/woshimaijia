<include file="Public:head" />
<div class="amain">
	<div class="leftsapce" style="margin-top: 30px;">
		<form id="form1" action="/input/deal" method="post"
			enctype="multipart/form-data">
			<table style="clear: both; width: 100%">
				<tbody>
					<tr>
						<td>名称</td>
						<td><input size="40" name="title" value="{$page.data.title}"
							type="text" datatype="require|ajax" require="true" msg="名称请输入" url="{:U('check/checkProductName')}" /></td>
					</tr>
					
					<tr>
						<td>描述</td>
						<td><textarea id="desc" rows="8" cols="50" name="desc" datatype="require" require="true" msg="请输入描述" >{$page.data.desc}</textarea>
						</td>
					</tr>
					<tr>
						<td>来源</td>
						<td><input size="40" name="url" value="{$page.data.url}"
							type="text" datatype="require" require="false" msg="商品的来源" /></td>
					</tr>

					<tr>
						<td><input type="hidden" name="form" value="product" id="form" /><input
							type="hidden" name="id" value="{$page.data.id}" id="id" />
						</td>
						<td><input type="submit" name="submit" value="提交"
							class="btn-submit"></td>
					</tr>
				</tbody>
			</table>
		</form>

		<script>
	$('#form1').checkForm();
	</script>
	</div>
</div>
<div class="aside">
	<include file="Component:actionlink" />
</div>
<div class="extra"></div>
<include file="Public:foot" />