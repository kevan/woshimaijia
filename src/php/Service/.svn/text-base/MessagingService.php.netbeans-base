/**
 * 添加消息处理
 * @author xinqiyang
 *
 */
class MessagingService extends BaseService
{
	/**
	 * 添加消息到mail表
	 * Enter description here ...
	 * @param unknown_type $array
	 */
	public function addMessage($array)
	{
		return self::add('mail', $array);
	}
}
